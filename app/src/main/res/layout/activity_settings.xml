<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back01"
    tools:context=".Login.PerfilUser.Settings">

    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="App criada e desenvolvida por: "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/creators"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="André Costa\n Filipe Fernandes\n Miguel Cruz\n Nelson Freitas\n Rui Carvalho\n Rodrigo Miranda"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/about">
    </TextView>

    <TextView
        android:id="@+id/course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ESTG-TPSI"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/creators">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IPVC ®"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@+id/course">
    </TextView>

    <ImageView
        android:id="@+id/img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/estglogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <!--BotÃµes ordenados da esquerda para a direita-->

        <ImageButton
            android:id="@+id/Funcionlide_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:onClick="Funcionlide_1"
            android:src="@drawable/ic_baseline_house_24"></ImageButton>


        <ImageButton
            android:id="@+id/Funcionlide_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:onClick="Funcionlide_3"
            android:src="@drawable/ic_baseline_map_24"></ImageButton>

        <ImageButton
            android:id="@+id/Funcionlide_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:onClick="Funcionlide_4"
            android:src="@drawable/ic_profile">

        </ImageButton>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>