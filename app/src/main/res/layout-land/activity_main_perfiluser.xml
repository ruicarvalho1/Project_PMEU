<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back01"
    tools:context=".Login.PerfilUser.MainActivity_perfiluser"
    android:orientation="horizontal">

    <View
        android:id="@+id/containerUser"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/container_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="90dp"
        />

    <ImageButton
        android:id="@+id/logoutBtn"
        android:src="@drawable/ic_logout2"
        android:layout_width="54dp"
        android:layout_height="47dp"
        android:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView

        android:id="@+id/imagemUser"
        android:layout_width="420px"
        android:layout_height="420px"
        android:innerRadius="100dp"
        android:thicknessRatio="2.0"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@id/containerUser"
        app:layout_constraintEnd_toEndOf="@id/containerUser"
        app:layout_constraintTop_toTopOf="@id/containerUser"
        app:layout_constraintBottom_toBottomOf="@id/containerUser"/>


    <ImageView
        android:id="@+id/iconeUser"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="130dp"
        android:src="@drawable/ic_user"
        app:layout_constraintLeft_toRightOf="@+id/containerUser"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/textNomeUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Nelson Freitas"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iconeUser"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp" />

    <ImageView
        android:id="@+id/iconeEmail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_email1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/iconeUser"
        app:layout_constraintStart_toStartOf="@+id/iconeUser"/>

    <TextView
        android:id="@+id/textEmailUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nelsonfreitas@ipvc.pt"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/textNomeUsuario"
        app:layout_constraintStart_toEndOf="@id/iconeEmail"/>

    <ImageView
        android:id="@+id/iconeNumber"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_number"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/iconeEmail"
        app:layout_constraintStart_toStartOf="@id/iconeEmail"/>

    <TextView
        android:id="@+id/textNumberUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27616"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/textEmailUsuario"
        app:layout_constraintStart_toEndOf="@id/iconeEmail"/>

    <ImageView
        android:id="@+id/iconeCurso"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_school_24"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/iconeNumber"
        app:layout_constraintStart_toStartOf="@id/iconeNumber"/>

    <TextView
        android:id="@+id/textCurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TPSI"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/textNumberUsuario"
        app:layout_constraintStart_toEndOf="@id/iconeNumber"/>

    <ImageButton
        android:id="@+id/settings"
        android:src="@drawable/ic_baseline_settings_24"
        android:layout_width="54dp"
        android:layout_height="47dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="settings"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <!--BotÃµes ordenados da esquerda para a direita-->

        <ImageButton
            android:id="@+id/Funcionlide_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:onClick="Funcionlide_1"
            android:src="@drawable/ic_baseline_house_24"></ImageButton>


        <ImageButton
            android:id="@+id/Funcionlide_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:onClick="Funcionlide_3"
            android:src="@drawable/ic_baseline_map_24"></ImageButton>

        <ImageButton
            android:id="@+id/Funcionlide_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:onClick="Funcionlide_4"
            android:src="@drawable/ic_profile">

        </ImageButton>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>